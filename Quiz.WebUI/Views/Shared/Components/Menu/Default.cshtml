@model Quiz.Application.DTOs.LoginDTO

<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">QuizMe</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
		aria-expanded="false" aria-label="Toggle navigation">
	<span class="navbar-toggler-icon"></span>
</button>
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
	<ul class="navbar-nav flex-grow-1">
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-controller="Question" asp-action="Index">Questions</a>
		</li>

		@if (Model.Perfil == Quiz.Domain.Enums.PerfilEnum.Admin)
		{
			<li class="nav-item">
				<a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Users</a>
			</li>
		}

	</ul>
	<a class="nav-link text-success" asp-route-id="@Model.Id" asp-area="" asp-controller="Perfil" asp-action="Index">Sua conta</a>
	<a class="nav-link text-danger" asp-area="" asp-controller="Login" asp-action="Logout">Sair</a>
</div>
