@model Quiz.Application.DTOs.UserQuestionDTO

<h1>Responder pergunta</h1>

<form method="post">
	<input asp-for="Question.Description" type="hidden"/>

	<div class="mb-3">
		<p>@Model.Question.Description</p>

		<input class="form-control" asp-for="Answer" type="text" />
	</div>

	<button class="btn btn-success" type="submit">Responder</button>
</form>