@model Quiz.Application.DTOs.QuestionDTO

<h1>Create question</h1>

<form method="post">
	<div class="mb-3">
		<label asp-for="Description"></label>
		<input type="text" asp-for="Description" class="form-control"/>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Answer"></label>
		<input type="text" asp-for="Answer" class="form-control"/>
		<span asp-validation-for="Answer" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Theme"></label>
		<input type="text" asp-for="Theme" class="form-control"/>
		<span asp-validation-for="Theme" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Points"></label>
		<input type="text" asp-for="Points" class="form-control" />
		<span asp-validation-for="Points" class="text-danger"></span>
	</div>

	<button class="btn btn-dark" type="submit">Create</button>
	<a asp-action="Index" asp-controller="Question" class="btn btn-secondary">Cancel</a>

</form>